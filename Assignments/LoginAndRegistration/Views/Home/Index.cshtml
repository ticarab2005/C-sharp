@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="d-flex justify-content-around">
        <form action="register" method="post" class="col-4 p-4 bg-dark text-light">
            <h2 class="text-warning">Register</h2>
            <div class="form-group">
                <label for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control mt-2">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label for="LastName">Last Name:</label>
                <input type="text" name="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label for="Email">Email:</label>
                <input type="text" name="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label for="Password">Password:</label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label for="Confirm">Confirm Password:</label>
                <input asp-for="Confirm" class="form-control">
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>
            <br>
            <input type="submit" value="Register" class="btn btn-warning">
        </form>
</div>

