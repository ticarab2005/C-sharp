<partial name="_Navbar.cshtml" />
@model Artist
<div class="d-flex justify-content-around">
        <div class="col-4 bg-light p-4 my-5 text-dark">
            <h2 class="text-center text-primary">Community News</h2>
            <p class="text-dark size">
                Welcome to the art community! Please post your artwork for all to see! Enjoy the love and support of your
            fellow artist! We're supportive group! So please be positive with constructive criticism and your work,
            thank you!</p>
        </div>
        <div class="col-4 bg-light p-4 my-5 text-dark">
        <h2 class="text-success text-center">Welcome @ViewBag.loggedInUser.UserId!</h2>
        <div class="d-flex justify-content-center align-items-center text-center">
            <a class="fs-5 pe-lg-5" href="/portfolio">My Portfolio</a>
            <a class="fs-5 p-2" href="/new">Add Artwork</a>
            <a class="fs-5 pe-lg-5" href="/logout">Logout</a>
        </div>
    </div>
</div>
<h1>Add your Artwork</h1>
<form action="createArtwork" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input asp-for="title" class="form-control">
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Technique">Technique</label>
        <input asp-for="Technique" class="form-control">
        <span asp-validation-for="Technique" class="text-danger"></span>
    </div>
    <asp:FileUpload ID="FileUpload1" runat="server" />
    <asp:Button ID="btnUpload" runat="server" Text="Upload" OnClick="Upload" />
    <hr />
    <asp:GridView ID="GridView1" runat="server" AutoGenerateColumns="false" ShowHeader="false">
    <Columns>
        <asp:BoundField DataField="Text" />
        <asp:ImageField DataImageUrlField="Value" ControlStyle-Height="100" ControlStyle-Width="100" />
    </Columns>
    <div class="form-group">
        <label for="Date">Date</label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info">
    </div>
</form>